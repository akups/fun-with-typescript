{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es7", "DOM"],
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": "/src"
  },
  "exclude": ["/node_modules/", "tests"],
  "include": ["src/**/*.ts"]
}
